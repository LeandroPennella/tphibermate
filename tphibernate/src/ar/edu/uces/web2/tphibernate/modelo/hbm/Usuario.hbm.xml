<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ar.edu.uces.web2.tphibernate.model.base.Usuario" table="usuarios">
		<id column="idUsuario" name="id">
			<generator class="native" />
		</id>
		
		<property column="nombre" name="nombre" />
		<property column="apellido" name="apellido" />
		<property column="nombreUsuario" name="nombreUsuario" />
		<property column="contrasenia" name="contrasenia" />
		<property column="lenguaje" name="lenguaje" />					
				
	</class>
</hibernate-mapping>